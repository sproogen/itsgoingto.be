{
  "name": "itsgoingtobe-server",
  "version": "0.0.1",
  "engines": {
    "node": "14.16.x"
  },
  "author": "James Grant <james@jwgmedia.co.uk> (http://jameswgrant.co.uk)",
  "license": "GPLv3",
  "description": "It's Going To Be node backend",
  "main": "src/index.ts",
  "scripts": {
    "build": "babel src -d dist --extensions '.ts,.js'",
    "start": "run-s sync serve",
    "sync": "babel-node src/db/sync.ts --extensions '.ts,.js'",
    "serve": "tsc-watch --noClear --onSuccess \"babel-node src/index.js --extensions '.ts,.js'\"",
    "lint": "eslint src/.",
    "eslint-output": "eslint-output",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "mysql2": "^2.1.0",
    "ramda": "^0.26.1",
    "sequelize": "^6.6.2",
    "socket.io": "^3.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.13.0",
    "@databases/mysql-test": "^3.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.2",
    "@types/ramda": "^0.27.40",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-output": "^2.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.1.3",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  },
  "jest": {
    "globalSetup": "<rootDir>/node_modules/@databases/mysql-test/jest/globalSetup.js",
    "globalTeardown": "<rootDir>/node_modules/@databases/mysql-test/jest/globalTeardown.js",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/api-tests/**/*?(*.)(spec|test).js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFiles": [
      "<rootDir>/src/api-tests/setup-tests.js"
    ],
    "coverageDirectory": "build/coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/api-tests/"
    ],
    "coverageReporters": [
      "lcov"
    ]
  },
  "mysql": {
    "test": {
      "migrationsScript": "npm run sync"
    }
  }
}
